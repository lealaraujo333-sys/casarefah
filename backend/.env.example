# Casa Refah Backend - Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Atlas Connection String
# Get it from: MongoDB Atlas → Connect → Drivers → Connection String
DATABASE_URL="mongodb+srv://user:password@cluster.mongodb.net/casarefah?retryWrites=true&w=majority"

# JWT Secret - Generate a strong random string (min 32 chars)
# You can use: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"

# JWT Expiration
JWT_EXPIRES_IN="24h"

# Server Port (optional)
PORT=3000

